{% extends 'base.html.twig' %}

{% block body %}
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary">{{ "now"|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+1 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+2 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+3 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+4 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+5 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">{{ "now"|date_modify("+6 day")|date("D-m/Y") }}</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-default">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th class="col-md-1">Numer</th>
                    <th class="col-md-1">Klient</th>
                    <th class="col-md-1">Ilość palet</th>
                    <th class="col-md-1">Waga</th>
                    <th class="col-md-2">Cel</th>
                    <th class="col-md-2">Telefon</th>
                    <th class="col-md-1">Status</th>
                    <th class="col-md-2">Akcje</th>
                </tr>
            </thead>
            <tbody>
                {% for i in 1..6 %}
                    <tr class="success">
                        <td>{{ i }}</td>
                        <td>Vena</td>
                        <td>4</td>
                        <td>21 000</td>
                        <td>Kraków ul.długa 8</td>
                        <td>798 798 125</td>
                        <td><span class="label label-success">Zrealizowane</span></td>
                        <td>
                            <a href="" class="btn btn-primary">
                                <span class="glyphicon glyphicon-envelope" aria-hidden="true">
                                </span></a>
                            <a href="" class="btn btn-success">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                                </span></a>
                            <a href="" class="btn btn-warning">
                                <span class="glyphicon glyphicon-road" aria-hidden="true">
                                </span></a>
                            <a href="" class="btn btn-danger">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true">
                                </span></a>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
