{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <h1>Kontrachenci</h1>
        <div class="row">
            <form class="navbar-form navbar-left" role="search">
                <input type="text" class="form-control" placeholder="Search">
                <button type="submit" class="btn btn-default">Szukaj</button>
            </form>
            <a class="btn btn-success right" href="{{ path('contractors_new') }}">Dodaj nowego kontrachenta</a>
        </div>
    </div> 
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th class="col-md-1">Numer</th>
                        <th class="col-md-1">Nazwa</th>
                        <th class="col-md-1">Typ</th>
                        <th class="col-md-1">Rabat</th>
                        <th class="col-md-1">Nr. telefonu</th>
                        <th class="col-md-1">Limit Kupiecki</th>
                        <th class="col-md-1">Kontrakt</th>
                        <th class="col-md-1">Email</th>
                        <th class="col-md-1">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contractor in contractors %}
                        <tr>
                            <td><a href="{{ path('contractors_show', { 'id': contractor.id }) }}">{{ contractor.id }}</a></td>
                            <td>{{ contractor.name }}</td>
                            <td>{{ contractor.type }}</td>
                            <td>{{ contractor.discount }}</td>
                            <td>{{ contractor.phone }}</td>
                            <td>{{ contractor.buyLimit }}</td>
                            <td>{% if contractor.contract %}Tak{% else %}Nie{% endif %}</td>
                            <td>{{ contractor.email }}</td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('contractors_show', { 'id': contractor.id }) }}">
                                    <span class="glyphicon glyphicon-eye-open" aria-hidden="true">
                                    </span>
                                </a>
                                <a class="btn btn-success" href="{{ path('contractors_edit', { 'id': contractor.id }) }}">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true">
                                    </span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
