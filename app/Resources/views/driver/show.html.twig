{% extends 'base.html.twig' %}

{% block body %}
    <h1>Driver</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ driver.name }}</td>
            </tr>
            <tr>
                <th>Carnumber</th>
                <td>{{ driver.carNumber }}</td>
            </tr>
            <tr>
                <th>Drivername</th>
                <td>{{ driver.driverName }}</td>
            </tr>
            <tr>
                <th>Driverphone</th>
                <td>{{ driver.driverPhone }}</td>
            </tr>
            <tr>
                <th>Carcapacity</th>
                <td>{{ driver.carCapacity }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('driver_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('driver_edit', { 'id': driver.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
